<div class="ui middle aligned center aligned grid new_edit_form">
  <div class="column">    
    <h2 class="ui teal header">
      <div class="content">
        <!-- check if the post exist meaning we want to edit. if not we want to create new -->
        Sign up
      </div>
    </h2>
  <%= form_for(resource,  html: {class: "ui field"}, as: resource_name, url: registration_path(resource_name)) do |f| %>
      <div class="ui feed tall stacked segment">
        <%= render "devise/shared/links" %>
        
        <%= devise_error_messages! %>
<div class="ui hidden divider"></div>
        <div class="ui input">
          <%= f.text_field :username, autofocus: true, placeholder: "Username"  %>

        </div>
        <div class="ui hidden divider"></div>
        <div class="ui input">
          <%= f.email_field :email, autofocus: true, placeholder: "Email"  %>
        </div>
        <div class="ui hidden divider"></div>
        <div class="ui input">
          <%= f.password_field :password, autocomplete: "off", placeholder:"Password"  %>
        </div>
        <% if @minimum_password_length %>
          </br>
          <em>(<%= @minimum_password_length %> characters minimum)</em>
        <% end %>
        <div class="ui hidden divider"></div>
        <div class="ui input">
          <%= f.password_field :password_confirmation, autocomplete: "off", placeholder: "Password confirmation"  %>
        </div>
        <div class="ui hidden divider"></div>
          <%= f.submit "Sign up", class: "ui fluid large teal submit button"  %>
      </div>

    <% end %>
        
  </div>

</div>
