<div class="ui container">
  <div class="ui two column middle aligned center aligned grid ">
    <div class="center aligned column padding-right">

      <h2 class="ui teal header">
        <div class="content">
          Log in
        </div>
      </h2>

      <%= form_for(resource, html: {class: "ui field"}, as: resource_name, url: session_path(resource_name)) do |f| %>
      <div class="ui feed center aligned tall stacked segment">
        <%= devise_error_messages! %>
        <div class="ui input">
          <%= f.email_field :email, autofocus: true, placeholder:"Email" %>
        </div>
        <div class="ui hidden divider"></div>
        <div class="ui input">
          <%= f.password_field :password, autocomplete: "off", placeholder: "Password"  %>
        </div>
        <div class="ui hidden divider"></div>
        <% if devise_mapping.rememberable? -%>
          <div class="ui input">
            <div class="ui checkbox">
              <%= f.check_box :remember_me, tabindex:"0", class: "hidden" %>
              <%= f.label :remember_me %>
            </div>
          </div>
        <% end -%>
        <div class="ui hidden divider"></div>
          <%= f.submit "Log in", class: "ui fluid large teal submit button"  %>
      </div>
      <% end %>

    <!--<%= render "devise/shared/links" %>-->
    </div>
    <div class="ui vertical divider">
      Or
    </div>
    <div class="center aligned column padding-left">
      <h2 class="ui teal header">
        <div class="content">
          Sign up
        </div>
      </h2>

      <%= form_for(resource,  html: {class: "ui field"}, as: resource_name, url: registration_path(resource_name)) do |f| %>
      <div class="ui feed tall stacked segment">
        <%= devise_error_messages! %>

        <div class="ui input">
          <%= f.text_field :username, autofocus: true, placeholder: "Username"  %>
        </div>
        <div class="ui hidden divider"></div>
        <div class="ui input">
          <%= f.email_field :email, autofocus: true, placeholder: "Email"  %>
        </div>
        <div class="ui hidden divider"></div>
        <div class="ui input">
          <% if @minimum_password_length %>
          <em>(<%= @minimum_password_length %> characters minimum)</em>
          <% end %><br />
          <%= f.password_field :password, autocomplete: "off", placeholder:"Password"  %>
        </div>
        <div class="ui hidden divider"></div>
        <div class="ui input">
          <%= f.password_field :password_confirmation, autocomplete: "off", placeholder: "Password confirmation"  %>
        </div>
        <div class="ui hidden divider"></div>
          <%= f.submit "Sign up", class: "ui fluid large teal submit button"  %>
      </div>
      <% end %>

    </div>
  </div>
</div>
