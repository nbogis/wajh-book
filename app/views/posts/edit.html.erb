<%= render "shared/navbar" %>

<div class="ui middle aligned center aligned grid new_edit_form">
  <div class="column">
    <h2 class="ui teal image header">
      <div class="content">
        <!-- check if the post exist meaning we want to edit. if not we want to create new -->
        Edit your post
      </div>
    </h2>

    <!-- <form class="ui large form"> -->
    <%= form_for @post, :html => { class: "ui large form" } do |f| %>
      <div class="ui feed tall stacked segment">
        <div class="field">
          <div class="ui left icon input">
              <%= f.text_area :body,
                              :placeholder => "Your post goes here" %>

          </div>
        </div>
        <div class="ui fluid buttons">
          <%= f.submit "Edit post", class: "ui teal button" %>
          <div class="or"></div>
          <%= link_to "Cancel", post_path(@post),
                                  data: { confirm: "Are you sure you want to cancel this action"},
                                  class: "ui red button" %>
        </div>
        <ul class="ui error message">
          <% @post.errors.full_messages.each do |error| %>
            <li><%= error %></li>
          <% end %>
        </ul>

    <% end %>
  </div>
</div>
