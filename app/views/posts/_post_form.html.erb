<%= render "shared/navbar" %>

<div class="ui middle aligned center aligned grid new_edit_form">
  <div class="column">
    <h2 class="ui teal image header">
      <div class="content">
        <!-- check if the post exist meaning we want to edit. if not we want to create new -->
        <% if post.persisted? %>
          <h1>Edit your post</h>
        <% else %>
          <h1>Create new post</h>
        <% end %>
      </div>
    </h2>

    <!-- <form class="ui large form"> -->
    <%= form_for post, :html => { class: "ui large form" } do |f| %>
      <div class="ui feed tall stacked segment">
        <div class="field">
          <div class="ui left icon input">
              <%= f.text_area :body,
                              :placeholder => "Your post goes here" %>
          </div>
        </div>
        <% if post.persisted? %>
          <%= f.submit "Edit post", class: "ui large teal submit button" %>
          <%= f.submit "Delete post", class: "ui large teal submit button" %>
        <% else %>
          <%= f.submit "Create post", class: "ui fluid large teal submit button" %>
      </div>
      <% end %>
      <ul class="ui error message">
        <% post.errors.full_messages.each do |error| %>
          <li><%= error %></li>
        <% end %>
      </ul>

    <% end %>
  </div>
</div>
